<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="5"
    android:columnCount="3">

    <TextView android:layout_column="0"
        android:layout_row="0"
        android:text="Setup Email"
        android:layout_columnSpan="3"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        >

    </TextView>

    <TextView android:layout_column="0"
        android:layout_row="1"
        android:text="You can configure email......"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        >

    </TextView>

    <TextView android:layout_row="2"
        android:layout_column="0"
        android:text=" email"
        ></TextView>

    <EditText android:layout_column="1"
        android:layout_row="2"
        android:text="Nhập email"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"


        ></EditText>

    <TextView android:layout_row="3"
        android:layout_column="0"
        android:text="Password"
        ></TextView>

    <EditText android:layout_column="1"
        android:layout_row="3"
        android:text="Nhập Password"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"

        ></EditText>

    <Button android:layout_column="2"
        android:layout_row="4"
        android:text="Login"
        android:layout_gravity="end"

        ></Button>

</GridLayout>